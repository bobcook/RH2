<div class="container">
  <div class="row">
    <p id="notice"><%= notice %></p>

    <h3>Listing Prayers</h3>
      <div class="column">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Date</th>
                <th>Name</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @prayers.each do |prayer| %>
                <tr>
                  <td><%= prayer.date %></td>
                  <td><%= prayer.member.name %></td>
                  <td><%= link_to 'Show', prayer, :class => 'button-xs' %></td>
                  <td><%= link_to 'Edit', edit_prayer_path(prayer), :class => 'button-xs' %></td>
                  <td><%= link_to 'Destroy', prayer, :class => 'button-xs', method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

<br>

<%= link_to 'New Prayer', new_prayer_path, :class => 'button-xs' %>
