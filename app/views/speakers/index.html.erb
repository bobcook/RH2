<div class="container">
  <div class="row">
    <p id="notice"><%= notice %></p>

    <h3>Listing Speakers</h3>
      <div class="column">
      <table class="table table-striped">
        <thead>
          <tr>
            <th><%= sort_link(@search, :date, 'Date') %></th>
            <th><%= sort_link(@search, :name, 'Name', default_order: :asc) %></th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @speakers.each do |speaker| %>
            <tr>
              <td><%= speaker.date %></td>
              <td><%= speaker.member.name %></td>
              <td><%= link_to 'Show', speaker, :class => 'button-xs' %></td>
              <td><%= link_to 'Edit', edit_speaker_path(speaker), :class => 'button-xs' %></td>
              <td><%= link_to 'Destroy', speaker, :class => 'button-xs', method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<br>

<%= link_to 'New Speaker', new_speaker_path, :class => 'button-xs' %>
