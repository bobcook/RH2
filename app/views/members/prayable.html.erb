<div class="container">
  <div class="row">
    <p id="notice"><%= notice %></p>

      <h3>Listing Members Prayers</h3>
      <div class="column">
        <table class="table">

          <thead>
            <tr>
              <th>Name</th>
              <th>Gender</th>
              <th>Birth date</th>
              <th>Phone number</th>
              <th>Email</th>
              <th>Prayer</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @prayable.each do |member| %>
              <tr>
                <td><%= member.name %></td>
                <td><%= member.gender %></td>
                <td><%= member.birth_date %></td>
                <td><%= member.phone_number %></td>
                <td><%= member.email %></td>
                <td><%= member.prayers.last.date if member.prayers.any? %>
                <td><%= link_to 'Show ', member, :class => 'button-xs' %></td>
                <td><%= link_to 'Edit ', edit_member_path(member), :class => 'button-xs' %></td>
                <td><%= link_to 'Destroy', member, method: :delete, :class => 'button-xs', data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

<%= link_to 'New Member', new_member_path, :class => 'button-xs' %>
