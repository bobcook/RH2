<%= simple_form_for @member do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :gender %>
    <%= f.input :birth_date, as: :date, start_year: Date.today.year - 90 %>
    <%= f.input :phone_number %>
    <%= f.input :email %>
    <%= f.input :current %>
    <%= f.input :exempt %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => 'button-xs' %>
  </div>
<% end %>
